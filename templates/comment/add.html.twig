{% extends 'base.html.twig' %}

{% block title %}Add Comment{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Add Comment</h1>

        <form method="post" class="space-y-4">
            {{ form_start(form) }}
            
            <div class="space-y-2">
                {{ form_label(form.text, 'Your Comment', {'label_attr': {'class': 'block font-medium text-gray-700 dark:text-gray-300'}}) }}
                {{ form_widget(form.text, {'attr': {'class': 'w-full px-4 py-2 border rounded-md bg-gray-100 dark:bg-gray-700 dark:text-white'}}) }}
                {{ form_errors(form.text) }}
            </div>

            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md mt-4">Submit</button>

            {{ form_end(form) }}
        </form>

        <div class="mt-4">
            <a href="{{ path('app_micro_post_show', {id: post.id}) }}" class="text-blue-500 hover:underline">Back to Post</a>
        </div>
    </div>
{% endblock %}
