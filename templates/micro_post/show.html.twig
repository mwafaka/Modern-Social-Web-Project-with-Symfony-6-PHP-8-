{% extends 'base.html.twig' %}

{% block title %}
	{{ post.title }}
{% endblock %}

{% block body %}

	<div class="max-w-2xl mx-auto bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
		<h1 class="text-3xl font-semibold text-gray-900 dark:text-gray-100">{{ post.title }}</h1>
		<p class="text-gray-700 dark:text-gray-300 mt-4">{{ post.text }}</p>
		<p class="text-sm text-gray-500 dark:text-gray-400">Published on
			{{ post.created | date("M j, Y") }}</p>

		<hr class="my-4 border-gray-300 dark:border-gray-600">

		<h2 class="text-xl font-semibold mt-4 text-gray-900 dark:text-gray-100">Comments</h2>

		{% if comments|length > 0 %}
			<div class="mt-4 space-y-4">
				{% for comment in comments %}

					<div class="p-4 bg-gray-100 dark:bg-gray-700 rounded-lg">
						<p class="text-gray-800 dark:text-gray-200">{{ comment.text }}</p>
						<p class="text-gray-800 dark:text-gray-200">{{  comment.created ? comment.created|date("M j, Y") : 'No date available' }}</p>

						{# <p class="text-gray-800 dark:text-gray-200">{{ comment.auhtor.email }}</p> #}
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p class="text-gray-500 dark:text-gray-400">No comments yet.</p>
		{% endif %}

		<div class="mt-6">
			<a href="{{ path('app_micro_post_add_comment', { id: post.id }) }}" class="bg-blue-500 hover:bg-blue-600  px-4 py-2 rounded-md">
				Add a Comment
			</a>
		</div>
	</div>
{% endblock %}
