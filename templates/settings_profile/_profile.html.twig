{% block body %}
	<div class="container mt-5">
		<h1 class="m-2 fw-bolder text-center">Edit Profile</h1>

		{% for flash_error in app.flashes('profile_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}

		{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
		<div class="mb-3 f">
			{{ form_label(form.name, 'Full Name', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.name) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.bio, 'Bio', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.bio, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.bio) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.websiteUrl, 'Website', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.websiteUrl, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.websiteUrl) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.twitterUsername, 'Twitter Username', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.twitterUsername, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.twitterUsername) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.company, 'Company', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.company, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.company) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.location, 'Location', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.location) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.dateOfBirth, 'Date of Birth', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.dateOfBirth, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.dateOfBirth) }}
		</div>


		{{ form_end(form) }}
	</div>
{% endblock %}
